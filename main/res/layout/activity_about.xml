<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/white_abstract_wallpapers"
    >

    <ImageView
        android:layout_width="400px"
        android:layout_height="400px"
        android:background="@drawable/grandetravel"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Travel Packages"
        android:textSize="20sp"
        android:padding="20dp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginBottom="30dp"
        android:onClick="packs"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company: GrandeTravel"
        android:textSize="20sp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: info@grandetravel.com"
        android:textSize="20sp"
        android:layout_margin="20dp"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright \u00A9 2017 GrandeTravel"
        />

</LinearLayout>